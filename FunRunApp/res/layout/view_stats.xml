<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_height="wrap_content" 
	android:layout_width="fill_parent" 
	android:gravity="center_horizontal">
	<Gallery 
		android:id = "@+id/statsGallery"
		android:layout_width = "fill_parent" 
		android:layout_height="wrap_content" />
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content" 
		android:gravity="center_horizontal" >
		<ImageButton android:id = "@+id/leftArrow"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:src="@drawable/left_small_style" 
			android:background="#000000"/>	
		<ImageButton android:id = "@+id/rightArrow"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:src="@drawable/right_small_style" 
			android:background="#000000"/>	
	</LinearLayout>
	<LinearLayout
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:gravity="center_horizontal">

		<Button android:id = "@+id/loadRunOnMap"
			style="@style/big_button"
			android:layout_width="wrap_content"
			android:text="Load on Map"
			android:paddingRight="5dp"/>

		<Button android:id = "@+id/backToTitle"
			style="@style/big_button"
			android:layout_width="wrap_content"
			android:text="Back to menu"
			android:paddingRight="5dp"/>

	</LinearLayout>
</LinearLayout>
