<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:key="preference_screen">

	<PreferenceCategory
		android:title="Fun Runner Preferences">
		<ListPreference
			android:key="accept_radius"
			android:title="Arrival radius"
			android:summary="How close you need to be"
			android:entryValues="@array/accept_radius_array"
			android:entries="@array/accept_radius_strings"
			android:defaultValue="25"
			android:dialogTitle="Arrival radius"/>
	</PreferenceCategory>

</PreferenceScreen>
